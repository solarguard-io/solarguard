<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">
    <changeSet author="silentsoft" id="create_bundles_0000">
        <createTable tableName="bundles">
            <column name="package_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="bundles_pkey"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="bundles_pkey"/>
            </column>
            <column defaultValueComputed="${now}" name="created_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="${now}" name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="bundles_package_id_idx" tableName="bundles">
            <column name="package_id"/>
        </createIndex>
        <createIndex indexName="bundles_product_id_idx" tableName="bundles">
            <column name="product_id"/>
        </createIndex>
        <addForeignKeyConstraint baseColumnNames="package_id" baseTableName="bundles" constraintName="bundles_package_id_fkey" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="packages" validate="true"/>
        <addForeignKeyConstraint baseColumnNames="product_id" baseTableName="bundles" constraintName="bundles_product_id_fkey" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="products" validate="true"/>
    </changeSet>
</databaseChangeLog>