<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">
    <changeSet author="silentsoft" id="create_devices_0000">
        <createTable tableName="devices">
            <column name="id" remarks="nano id" type="VARCHAR">
                <constraints nullable="false" primaryKey="true" primaryKeyName="devices_pkey"/>
            </column>
            <column name="mac_address" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="${now}" name="created_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="${now}" name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="updated_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="devices_mac_address_idx" tableName="devices">
            <column name="mac_address"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>